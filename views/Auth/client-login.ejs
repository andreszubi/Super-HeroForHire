<div class="bodyLoginForm">
    <div class="brandImg2">
        <img src="/images/logo.png">
    </div>
    <div class="loginForm">
        <h1 class="title">Client Login</h1>
        <form class="loginFormInput" action="/auth/client/client-login" method="POST">
            <input class="formInput" type="email" name="email" placeholder="Email" />
            <input class="formInput" type="password" name="password" placeholder="Password" />
            <br>
            <button class="pro-button" type="submit">Login</button>
        </form>
    </div>
</div>

<% if (typeof errorMessage !=='undefined' ) { %>
    <p style="color: red">
        <%= errorMessage %>
    </p>
    <% } %>